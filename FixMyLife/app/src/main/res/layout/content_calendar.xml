<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.sikware.fixmylife.Calendar"
    tools:showIn="@layout/app_bar_calendar"
    tools:layout_editor_absoluteY="81dp"
    tools:layout_editor_absoluteX="0dp">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="495dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteY="8dp"
        tools:layout_editor_absoluteX="8dp"
        android:weightSum="1">

        <Button
            android:id="@+id/importBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="6dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:text="@string/importTask" />

        <com.sickmartian.calendarview.MonthView
            xmlns:calendar_view="http://schemas.android.com/apk/res-auto"
            android:layout_below="@+id/importBtn"
            calendar_view:textSize="12sp"
            calendar_view:activeTextColor="@color/colorPrimaryDark"
            calendar_view:inactiveTextColor="@color/colorPrimary"
            calendar_view:activeBackgroundColor="@color/cardview_light_background"
            calendar_view:selectedBackgroundColor="@color/colorAccent"
            calendar_view:inactiveBackgroundColor="@color/cardview_dark_background"
            calendar_view:currentDayDecorationDrawable="@drawable/current_day_drawable"
            calendar_view:currentDayDecorationSize="24dp"
            calendar_view:currentDayTextColor="@color/cardview_shadow_end_color"
            calendar_view:showOverflow="true"
            calendar_view:overflowColor="@color/colorPrimary"
            calendar_view:overflowHeight="2dp"
            calendar_view:separatorColor="@color/colorAccent"
            android:id="@+id/calendarView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/taskAble" />

        <ListView
            android:layout_width="364dp"
            android:layout_height="match_parent"
            android:layout_margin="4dp"
            android:layout_marginBottom="8dp"
            android:layout_weight="0.95"
            android:background="@drawable/border"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="8dp" />
    </LinearLayout>

</android.support.constraint.ConstraintLayout>
