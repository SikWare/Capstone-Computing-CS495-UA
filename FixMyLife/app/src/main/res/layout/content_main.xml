<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="2"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.sikware.fixmylife.MainActivity"
    tools:showIn="@layout/app_bar_main"
    android:baselineAligned="false">

    <ImageView
        android:id="@+id/imageViewTop"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        app:srcCompat="@android:color/holo_red_light"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp" />

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="8dp"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_margin="8dp">


        <android.support.v7.widget.CardView
            android:id="@+id/pantry"
            android:layout_width="150dp"
            android:layout_height="115dp"
            android:layout_column="0"
            android:layout_margin="16dp"
            android:layout_row="0"
            android:tag="Pantry"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="111dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/imageView1"
                    android:layout_width="75dp"
                    android:layout_height="65dp"
                    android:layout_below="@+id/textView9"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="16dp"
                    app:srcCompat="@drawable/groceries" />

                <TextView
                    android:id="@+id/textView9"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#AAAAAA"
                    android:elevation="0dp"
                    android:text="@string/card1"
                    android:textAlignment="center"
                    android:typeface="sans" />
            </RelativeLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/notes"
            android:layout_width="150dp"
            android:layout_height="115dp"
            android:layout_column="1"
            android:layout_margin="16dp"
            android:layout_row="0"
            android:tag="Notes"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="111dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="75dp"
                    android:layout_height="65dp"
                    android:layout_below="@+id/textView11"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="15dp"
                    app:srcCompat="@drawable/notepad" />

                <TextView
                    android:id="@+id/textView11"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#AAAAAA"
                    android:elevation="0dp"
                    android:text="@string/card2"
                    android:textAlignment="center"
                    android:typeface="sans" />
            </RelativeLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/media"
            android:layout_width="150dp"
            android:layout_height="115dp"
            android:layout_column="0"
            android:layout_margin="16dp"
            android:layout_row="1"
            android:tag="Media"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="111dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/imageView3"
                    android:layout_width="75dp"
                    android:layout_height="65dp"
                    android:layout_below="@+id/textView10"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="16dp"
                    app:srcCompat="@drawable/videoplayer" />

                <TextView
                    android:id="@+id/textView10"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#AAAAAA"
                    android:elevation="0dp"
                    android:text="@string/card3"
                    android:textAlignment="center"
                    android:typeface="sans" />
            </RelativeLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/chat"
            android:layout_width="150dp"
            android:layout_height="115dp"
            android:layout_column="1"
            android:layout_margin="16dp"
            android:layout_row="1"
            android:tag="Chat"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="111dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/imageView4"
                    android:layout_width="75dp"
                    android:layout_height="65dp"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="16dp"
                    app:srcCompat="@drawable/chat" />

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#AAAAAA"
                    android:elevation="0dp"
                    android:text="@string/card4"
                    android:textAlignment="center"
                    android:typeface="sans" />
            </RelativeLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/progress"
            android:layout_width="150dp"
            android:layout_height="115dp"
            android:layout_column="0"
            android:layout_margin="16dp"
            android:layout_row="2"
            android:tag="Progress"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="111dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/imageView5"
                    android:layout_width="75dp"
                    android:layout_height="65dp"
                    android:layout_below="@+id/textView3"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="15dp"
                    app:srcCompat="@drawable/progresschart" />

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#AAAAAA"
                    android:elevation="0dp"
                    android:text="@string/card5"
                    android:textAlignment="center"
                    android:typeface="sans" />
            </RelativeLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/calendar"
            android:layout_width="150dp"
            android:layout_height="115dp"
            android:layout_column="1"
            android:layout_margin="16dp"
            android:layout_row="2"
            android:tag="Calendar"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="111dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/imageView6"
                    android:layout_width="75dp"
                    android:layout_height="65dp"
                    android:layout_below="@+id/textView4"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="16dp"
                    app:srcCompat="@drawable/calendar" />

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#AAAAAA"
                    android:elevation="0dp"
                    android:text="@string/card6"
                    android:textAlignment="center"
                    android:typeface="sans" />
            </RelativeLayout>

        </android.support.v7.widget.CardView>

    </GridLayout>


</LinearLayout>
